#!/bin/bash

cont=1
connected=0

while [ $cont -le 5  ] && [ $connected -eq 0 ]; do
    echo "Tentativa $cont"

    for i in 1 2 3; do
        timeout 0.6 ping -c 1 robo-nuc"$i".local &>/dev/null
        if [ $? -eq 0 ]; then
            ssh -X robo@robo-nuc"$i".local
            connected=1
            break
        else
            echo "$i est√° offline."
        fi
    done
    cont=$(( $cont + 1 ))
done 